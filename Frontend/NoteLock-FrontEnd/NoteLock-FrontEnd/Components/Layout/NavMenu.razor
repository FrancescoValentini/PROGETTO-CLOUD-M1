@using NoteLock_FrontEnd.Utils
@inject TokenService tokenService
@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">NoteLock-FrontEnd</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (!loggato)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="register">
                    <i class="bi bi-person-plus"></i> Register
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </NavLink>
            </div> 
        }
        
        @if (!loggato) {
            <div class="nav-item px-3 ">
                <NavLink class="nav-link" href="whoami">
                    <i class="bi bi-person-badge"></i> Whoami
                </NavLink>
            </div>

        <div class="nav-item px-3 ">
            <NavLink class="nav-link" href="folders">
                <i class="bi bi-folder2"></i> Folders
            </NavLink>
        </div>
        <div class="nav-item px-3 ">
            <NavLink class="nav-link" href="notes">
                <i class="bi bi-journal-text"></i> Notes
            </NavLink>
        </div>
            <div class="nav-item px-3 ">
                <NavLink class="nav-link" href="logout">
                    <i class="bi bi-box-arrow-left"></i> Logout
                </NavLink>
            </div>
        
        }
        
    </nav>
</div>

@code
{
    Boolean loggato = false;
    String token;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {

        token = await tokenService.GetToken();
        if (string.IsNullOrEmpty(token))
        {
            loggato = false;
        }
        else
        {
            loggato = true;
        }
        Console.WriteLine("ok");
    }
}
